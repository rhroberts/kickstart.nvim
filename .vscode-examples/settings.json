// VSCode Vim Extension Settings
// Add these to your VSCode settings.json file
// These mappings require the VSCode Vim extension configuration

{
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "block",
  "vim.leader": "space",
  "vim.textwidth": 88,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["<leader>", "D"],
      "commands": ["editor.action.peekDefinition"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["<leader>", "]"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "["],
      "commands": ["editor.action.marker.previous"]
    },
    {
      "before": ["<leader>", "k"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "s", "g"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.actions.view.problems"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "l"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<leader>", "g", "b"],
      "commands": ["gitlens.toggleLineBlame"]
    },
    {
      "before": ["<leader>", "b", "d"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "b", "w"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "b", "a"],
      "commands": ["workbench.action.closeAllEditors"]
    },

    {
      "before": ["<leader>", "o"],
      "commands": ["outline.focus"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "I"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "D"],
      "commands": ["editor.action.goToDeclaration"]
    },
    {
      "before": ["<tab>"],
      "commands": ["workbench.action.nextEditorInGroup"]
    },
    {
      "before": ["<S-tab>"],
      "commands": ["workbench.action.previousEditorInGroup"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.focusRightGroup"]
    }
  ],
}
